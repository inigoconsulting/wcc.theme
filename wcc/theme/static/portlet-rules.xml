<?xml version="1.0" encoding="UTF-8"?>
<section
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    >

    <xsl:if test="dl[contains(@class,'portlet')] and not(dl[contains(@class,'portletSearch')])">
        <div class="portlet-wrapper">
            <h2 class="portlet-header">
                <xsl:copy-of select="dl/dt[@class='portletHeader']/node()"/>
            </h2>
            <div class="portlet-content">
                <xsl:for-each select="dl/dd">
                    <div>
                        <xsl:copy-of select="*"/>
                    </div>
                </xsl:for-each>
            </div>
        </div>
    </xsl:if>
    <xsl:if test="dl[contains(@class,'portletSearch')]">
        <div class="portlet-wrapper">
            <div class="search-portlet">
                <xsl:copy-of select="dl/dd/form"/>
            </div>
        </div>
    </xsl:if>
    <xsl:if test="not(dl[contains(@class,'portlet')]) and not(dl[contains(@class,'portletSearch')])">
        <div class="portlet-wrapper">
            <xsl:copy-of select="node()"/>
        </div>
    </xsl:if>

</section>
